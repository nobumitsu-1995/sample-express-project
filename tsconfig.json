{
  "compilerOptions": {
    "strict": true,
    "target": "ES2023",
    "module": "CommonJS",
    "lib": ["ES2023"],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "src",
    "paths": {
      "@Application/*": ["Application/*"],
      "@Domain/*": ["Domain/*"],
      "@Infrastructure/*": ["Infrastructure/*"]
    },
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "eslint.config.mjs",
    "prisma/seed.ts",
    "vite.config.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
